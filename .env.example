# Node.js Environment
NODE_ENV=development

# API Server Configuration
PORT=4000
HOST=localhost

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=300

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# GitHub Authentication (for repository integration)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitLab Authentication (for repository integration)
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# Bitbucket Authentication (for repository integration)
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret

# CORS Configuration (Allow UI on port 3000)
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PORT=3001

# Logging
LOG_LEVEL=info

# Test Configuration (Playwright E2E Tests)
TEST_ENV=local
BASE_URL=http://localhost:3000
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
