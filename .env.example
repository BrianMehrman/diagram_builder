# Node.js Environment
NODE_ENV=development

# API Server Configuration
PORT=4000
HOST=localhost

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=300

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# GitHub Authentication (for repository integration)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitLab Authentication (for repository integration)
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# Bitbucket Authentication (for repository integration)
BITBUCKET_CLIENT_ID=your-bitbucket-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret

# CORS Configuration (Allow UI on port 3000)
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PORT=3001

# Logging
LOG_LEVEL=info

# Parser Configuration (Story 6-5: Configuration & Security)
# -------------------------------------------------------------
# Temporary directory for cloned repositories
PARSER_TEMP_DIR=/tmp/diagram-builder

# Repository size limits (prevents DoS attacks)
MAX_REPO_SIZE_MB=500          # Maximum repository size in megabytes
MAX_FILE_COUNT=10000          # Maximum number of files to parse
MAX_FILE_SIZE_MB=10           # Maximum individual file size in megabytes
PARSE_TIMEOUT_MS=300000       # Parser timeout in milliseconds (5 minutes)

# Secret scanning configuration
ENABLE_SECRET_SCANNING=true   # Enable/disable secret pattern detection
SECRET_ACTION=warn            # Action on secret detection: warn|redact|fail

# Rate Limiting (Story 6-5: Security Hardening)
# -------------------------------------------------------------
RATE_LIMIT_ENABLED=true       # Enable/disable rate limiting
RATE_LIMIT_WINDOW_MS=60000    # Rate limit window in milliseconds (1 minute)
RATE_LIMIT_MAX_REQUESTS=100   # Maximum requests per window

# Test Configuration (Playwright E2E Tests)
TEST_ENV=local
BASE_URL=http://localhost:3000
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123
